    "@tsconfig/node12": "^1.0.9",
    "@tsconfig/node14": "^1.0.1",
    "@tsconfig/node16": "^1.0.2",
    "chalk": "^4.1.2",
    "ignore": "^5.2.0",
    "ts-morph": "^13.0.2",
